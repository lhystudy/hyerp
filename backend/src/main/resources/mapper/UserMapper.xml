<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyerp.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.hyerp.model.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, username, password, real_name, email, phone, status, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.hyerp.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password, real_name, email, phone, status, create_time, update_time)
        VALUES (#{username}, #{password}, #{realName}, #{email}, #{phone}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <update id="updateByPrimaryKey" parameterType="com.hyerp.model.User">
        UPDATE user
        SET username = #{username},
            password = #{password},
            real_name = #{realName},
            email = #{email},
            phone = #{phone},
            status = #{status},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user
        WHERE id = #{id}
    </select>

    <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user
        WHERE username = #{username}
    </select>
</mapper>

